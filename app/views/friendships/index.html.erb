<div class="row">
  <div class="row">
    <div class="small-centered small-8 columns">
      <%= form_tag("/friendships", method: "get") do %>
        <div class="small-8 columns">
          <%= label_tag(:q, "Search Friends:") %>
          <%= text_field_tag(:q) %>
        </div>
        <div class="small-4 columns">
          <%= submit_tag("Search", class:"button small alert") %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="small-8 small-centered columns">
    <% if @user == current_user %>
      <h3 class="title text-center div-bar">Your Friends:</h3>
    <% else %>
      <h3 class="title text-center div-bar"><%=link_to("@#{@user.user_name}'s", user_path(@user))%> Friends:</h3>
    <% end %>
    <ul class="content user-index">
      <% @friends.each do |user| %>
        <li class="user-preview">
          <div class="row">
            <div class="small-3 columns">
              <%= image_tag(user.profile_photo, class:"profile-photo") %>
            </div>
            <div class="small-6 columns">
              <h4 class="user-name"><%= link_to "@#{user.user_name}", user%></h4>
              <p>(<%=user.full_name%>)</p>
              <p><%=user.entries.length%> entries</p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
