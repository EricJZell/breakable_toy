<div class="row">
  <div class="small-10 small-centered columns">
    <h4>Fill out entry details below:</h4>
    <%= form_for [@user, @entry] do |f| %>
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title%><br />
      </div>

      <div class="field">
        <%= f.label :body %>
        <%= f.text_area :body %><br />
      </div>

      <div class="field">
        <%= f.label :date %>
        <%= f.date_select(:date) %><br />
      </div>

      <div class="field">
        <%= f.label :region_id %>
        <%= f.collection_select :region_id, Region.all, :id, :name, {}, {id:'region-select'} %>
      </div>

      <div class="field">
        <%= f.label :country_id %>
        <%= f.collection_select :country_id, Country.all.where(region: Region.first), :id, :name, {}, {id:'country-select'} %>
      </div>

      <div class="field">
        <%= f.label :location_id %>
        <%= f.collection_select :location_id, Location.all.where(country: Region.first.countries[0]), :id, :name, {}, {id:'location-select'} %>
      </div>

      <div class="actions">
        <%= f.submit class:"button" %>
      </div>
    <% end %>
  </div>
</div>
