<div class="row">
  <div class="small-4 columns">
    <%= image_tag(@user.profile_photo) %>
    <h4>@<%= @user.user_name %></h4>
  </div>
  <div class="small-8 columns">
    <h3><%= @entry.title %></h3>
    <h6><%= "#{@entry.date}, #{@entry.location.name}, #{@entry.country.name}, #{@entry.region.name}"%></h6>
    <% if current_user == @user %>
      <h6>
        <%= link_to 'Edit Entry', edit_user_entry_path(@user, @entry) %> |
        <%= link_to 'Delete Entry', user_entry_path(@user, @entry), method: :delete %>
      </h6>
    <% end %>
    <h6><%= link_to("Check out the current forcast for #{@entry.location.name}!", "http://magicseaweed.com/#{@entry.location.msw_url}", target: '_blank')%></h6>
  </div>
</div>
<div class="row">
  <div class="small-6 columns">
    Photos
    Map
    <%= form_for [@entry, @photo] do |f| %>
      <%= f.label :file_name, "Entry Photo" %>
      <%= f.file_field :file_name %><br />
      <%= f.submit "Add Photo", class: "button" %>
    <% end %>
    <div class="owl-carousel">
      <% @photos.each do |photo| %>
        <div><%= image_tag(photo.file_name) %></div>
      <% end %>
    </div>
  </div>
  <div class="small-6 columns">
    <div id="map-container">
      <%= content_tag :div, id: "map-canvas", data: {locations: [@entry.location], center: {lat: @entry.location.lat, lng: @entry.location.lon}, zoom: 7} do %>
      <% end %>
    </div>
    <p><%= @entry.body %></p>
  </div>
</div>
