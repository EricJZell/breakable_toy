<div class="home-page">
  <div class="row">
    <div class="small-10 small-centered columns welcome">
      <h1 class="home-font"><strong>SWELL</strong> JOURNAL</h1>
      <% if current_user %>
        <h6 class="home-sub-title"><%="Welcome back @#{current_user.user_name}!"%></h6>
        <div class="row">
          <div id="quick-entry" class="small-12 columns text-center small-centered">
            <%= form_for [current_user, @entry] do |f| %>
              <%= f.hidden_field :title, value: '[Title Placeholder]'  %>
              <%= f.hidden_field :date, value: Date.today %>
              <%= f.hidden_field :latitude, value: 0, id:"entry_latitude"  %>
              <%= f.hidden_field :longitude, value: 0, id:"entry_longitude" %>
              <%= f.submit class:"button alert large", style:"display: none;" %>
            <% end %>
            <div class="button loading">
             Calculating your location, please wait...
           </div>
          </div>
        </div>
      <% else %>
        <h6 class="home-sub-title">Document Your Surf Travels</h6>
        <div class="text-center">
          <%= link_to "Sign In", new_user_session_path, class:"button success" %>
          <%= link_to "Sign Up", new_user_registration_path, class:"button success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
