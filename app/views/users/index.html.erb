<div class="row">
  <div class="row">
    <div class="small-centered small-8 columns">
      <div class="large-8 small-9 columns">
        <input type="text" name="search" id="search" placeholder="Search Users">
      </div>
      <div class="large-4 small-3 columns">
        <input type="submit" name="commit" value="Search" class="alert button small">
      </div>
    </div>
  </div>
  <div class="small-8 small-centered columns">
    <h3 class="title text-center div-bar">Users</h3>
    <ul class="content user-index">
      <% @users.each do |user| %>
        <li class="user-preview">
          <div class="row">
            <div class="small-3 columns">
              <%= image_tag(user.profile_photo, class:"profile-photo") %>
            </div>
            <div class="small-6 columns">
              <h4 class="user-name"><%= link_to "@#{user.user_name}", user%></h4>
              <p>(<%=user.full_name%>)</p>
            </div>
            <div class="small-3 columns">
              <%= form_for @friendship do |f| %>
                <%= f.submit "Add Friend", class:"button round" %>
              <% end %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
    <p>
      <%= paginate @users %>
      <%= page_entries_info @users %>
    </p>
  </div>
</div>
