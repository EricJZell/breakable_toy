<div class="row">
  <div class="row">
    <div class="small-centered small-8 columns">
      <%= form_tag("/users", method: "get") do %>
        <div class="small-8 columns">
          <%= label_tag(:q, "Search Users:") %>
          <%= text_field_tag(:q) %>
        </div>
        <div class="small-4 columns">
          <%= submit_tag("Search", class:"button small alert") %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="small-8 small-centered columns">
    <h3 class="title text-center div-bar">Users</h3>
    <ul class="content user-index">
      <% @users.each do |user| %>
        <li class="user-preview">
          <div class="row">
            <div class="small-3 columns">
              <%= image_tag(user.profile_photo, class:"profile-photo") %>
            </div>
            <div class="small-6 columns">
              <h4 class="user-name"><%= link_to "@#{user.user_name}", user%></h4>
              <p>(<%=user.full_name%>)</p>
              <p><%=user.entries.length%> entries</p>
            </div>
            <div class="small-3 columns">
              <% if current_user %>
                <% unless current_user == user %>
                  <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
                <% end %>
              <% end %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
    <p>
      <%= paginate @users %>
      <%= page_entries_info @users %>
    </p>
  </div>
</div>
