<div class="row">
  <div class="small-8 small-centered columns">
    <h3 class="title text-center div-bar">Search Users</h3>
    <ul class="content user-index">
      <% @users.each do |user| %>
        <li class="user-preview">
          <div class="row">
            <div class="small-3 columns">
              <%= image_tag(user.profile_photo, class:"profile-photo") %>
            </div>
            <div class="small-6 columns">
              <h4 class="user-name"><%= link_to "@#{user.user_name}", user%></h4>
              <p>(<%=user.full_name%>)</p>
            </div>
            <div class="small-3 columns">
              <%= form_for @friendship do |f| %>
                <%= f.submit "Add Friend", class:"button" %>
              <% end %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
