<!DOCTYPE html>
<html>
<head>
  <title>SwellJournal</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>

</head>
<body>

  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">SwellJournal</a></h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <li><%= link_to 'Search Users', users_path %></li>
        <%- if current_user -%>
          <li><%= link_to 'New Journal Entry', new_user_entry_path(current_user) %></li>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
          <li><%= link_to "View Your Profile", current_user %></li>
          <li><%= link_to 'Edit Your User Profile', edit_user_registration_path, method: :get %></li>
        <%- else -%>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
        <%- end -%>
      </ul>
    </section>
  </nav>


  <div class="main-container">
    <%- flash.each do |key, value| -%>
      <div class="alert-box">
        <%= value %>
      </div>
    <%- end -%>
    <%= yield %>
  </div>
  <script src="https://maps.googleapis.com/maps/api/js?" + <%=ENV['GOOGLE_MAPS_API_KEY']%>></script>
  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
